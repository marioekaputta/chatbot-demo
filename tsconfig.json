{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es2017", "dom"],
    "types": ["reflect-metadata"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist"
  }
}